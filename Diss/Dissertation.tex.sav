    Plot2d_1(theta,abs(real(B)),'Magnetic induction field ...
      as function of colatitude',NN)

    Plot3d_1(theta,phi,real(B),'Magnetic induction field',NN);

    Plot3d_1(theta,phi,abs(real(B)),'Magnitude of the magnetic ...
      induction field',NN);

    case(2)
